<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".Xacnhanthongtindiachi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"

        >

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
           >

            <TextView
                android:id="@+id/tv_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FACIWAY"
                android:textStyle="bold"
                android:textSize="24sp" />

        </LinearLayout>

        <!-- Show Order Summary -->






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/iv_cart_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/cart_icon"
                android:contentDescription="Cart Icon"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/tv_total_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$49.30"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Shipping Address -->
        <TextView
            android:id="@+id/tv_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping address"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_address_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tho an dN ph Hanoi, Hà Nội, Vietnam"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />


        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác Nhận Đơn Hàng"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <!-- Return Button -->
        <TextView
            android:id="@+id/tv_return_to_customer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return to customer information"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
