<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/main"
    android:gravity="center"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Top Image -->
    <ImageView
        android:id="@+id/topImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_register"
        android:layout_centerHorizontal="true" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Create an account"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edTenNguoiDung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"

        android:hint="Tên người dùng"
        android:padding="12dp"
        />
    <!-- Email EditText -->
    <EditText
        android:id="@+id/edEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:hint="Email"
        android:padding="12dp"
        />
    <EditText
        android:id="@+id/edSdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@id/titleText"
        android:hint="Số điện thoại"
        android:text="+84"
        android:padding="12dp" />
    <EditText
        android:id="@+id/edDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:hint="Địa chỉ"
        android:padding="12dp" />


    <!-- Password EditText -->
    <EditText
        android:id="@+id/edPassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edEmail"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:padding="12dp"
        android:inputType="textPassword" />

    <!-- Confirm Password EditText -->
    <EditText
        android:id="@+id/edConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edPassWord"
        android:layout_marginTop="16dp"
        android:hint="Confirm Password"
        android:padding="12dp"
        android:inputType="textPassword" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edConfirmPassword"
        android:layout_marginTop="32dp"
        android:backgroundTint="#000000"
        android:text="SIGN UP"
        android:textColor="#FFFFFF" />

    <!-- Continue With Section -->
    <TextView
        android:id="@+id/continueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="or continue with"
        android:textColor="#888888"
        android:textSize="18sp" />

    <!-- Social Buttons Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/continueText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- Google Button -->
        <ImageView
            android:id="@+id/googleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"

            android:src="@drawable/google_icon" />

        <!-- Facebook Button -->
        <ImageView
            android:id="@+id/facebookButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"

            android:src="@drawable/facebook_ic" />

        <!-- Apple Button -->
        <ImageView
            android:id="@+id/appleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:src="@drawable/apple_icon" />
    </LinearLayout>

    <!-- Bottom Links -->

</LinearLayout>
