<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvTenKhachHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng: Tên"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Ngày đặt hàng -->
        <TextView
            android:id="@+id/tvNgayDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đặt: 01-01-2024"
            android:textColor="#555"
            android:textSize="14sp" />

        <!-- Trạng thái đơn hàng -->
<!--        <TextView-->
<!--            android:id="@+id/tvTrangThai"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Trạng thái: Đang xử lý"-->
<!--            android:textColor="#008000"-->
<!--            android:textSize="14sp" />-->

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 1,000,000 VND"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Số điện thoại -->
        <TextView
            android:id="@+id/tvSoDienThoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: 0123456789"
            android:textColor="#555"
            android:textSize="14sp" />

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/tvDiaChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: Hà Nội, Việt Nam"
            android:textColor="#555"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>